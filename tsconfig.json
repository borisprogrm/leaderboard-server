{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"target": "es2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"sourceMap": true,
		"allowJs": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
	},
	"include": ["src/**/*"]
}